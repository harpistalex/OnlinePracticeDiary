<body>

  <div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 25%">
        <h1>Hello!</h1>
        
        <div>
          <!-- LOGIN -->
          <input type='checkbox' id='form-switch'>
          <div id='login-form'>
            <!-- <input type="hidden" name="action" value="login"> -->
            <input type="email" id="loginEmail" name="email" placeholder="email" required>
            <input type="password" id="loginPassword" name="password" placeholder="password" required>
            <button id="login" onclick={signInWithEmail()}>Login</button>
            <label for='form-switch'><span>Don't have an account? Register.</span></label>
          </div>
          <!-- REGISTER -->
          <div id='register-form'>
            <!-- <input type="hidden" name="action" value="register"> -->
            <input type="text" id="registerUsername" name="username" placeholder="username" required>
            <input type="email" id="registerEmail" name="email" placeholder="email" required>
            <input type="password" id="registerPassword" name="password" placeholder="password" required>
            <input type="password" id="registerRepeatPassword" name="repeatPassword" placeholder="repeat password" required>
            <button id="register" onclick={register()}>Register</button>
            <label for='form-switch'>Already have an account? Login.</label>
          </div>
          <!-- Logout -->
            <button id="logout" onclick={signOut()}>Logout</button>
        </div>

      </div>
    </div>
